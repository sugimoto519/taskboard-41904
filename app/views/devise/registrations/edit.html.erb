<div class="auth-form-container">
  <h2>ユーザー情報編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group mb-3">
    <%= f.label :name, "お名前", class: "form-label" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "お名前" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :email, "メールアドレス", class: "form-label" %>
    <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="mb-3 p-2" style="background-color: #fff3cd; border: 1px solid #ffeeba; color: #856404; border-radius: .25rem;">
      現在、メールアドレスの確認待ちです: <%= resource.unconfirmed_email %>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= f.label :password, "新しいパスワード", class: "form-label" %>
    <% if @minimum_password_length %>
      <small class="form-text text-muted">(<%= @minimum_password_length %> 文字以上)</small>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "新しいパスワード" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "新しいパスワードをもう一度入力" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :current_password, "現在のパスワード", class: "form-label" %>
    <small class="form-text text-muted">(変更を保存するには現在のパスワードが必要です)</small>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "現在のパスワード" %>
  </div>

  <div class="actions mt-4">
    <%= f.submit "更新する", class: "btn btn-primary w-100" %>
  </div>
<% end %>

  <div class="mt-5">
    <h3 class="mb-3 text-center">アカウントの削除</h3>
    <p class="text-center mb-3">アカウントが不要になった場合は、こちらから削除できます。</p>
    <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当によろしいですか？アカウントを削除すると元に戻すことはできません。", turbo_confirm: "本当によろしいですか？アカウントを削除すると元に戻すことはできません。" }, method: :delete, class: "btn btn-danger w-100 mb-3" %>
  </div>

  <div class="text-center mt-3 devise-links">
    <%= link_to "戻る", :back %>
  </div>
  </div>
