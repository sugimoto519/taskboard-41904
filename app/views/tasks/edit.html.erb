<div class="auth-form-container">
  <h2>タスク編集</h2>

  <%= form_with model: @task, local: true do |f| %>
    <%# エラーメッセージがある場合はここに表示すると良いでしょう %>
    <%# <%= render "shared/error_messages", resource: @task %>

    <div class="form-group">
      <%= f.label :task_name, "タスク名", class: "form-label" %>
      <%= f.text_field :task_name, class: "form-control", placeholder: "タスク名を入力してください" %>
    </div>

    <div class="form-group">
      <%= f.label :deadline, "期限", class: "form-label" %>
      <%= f.datetime_field :deadline, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :priority_id, "優先度", class: "form-label" %>
      <%= f.collection_select(:priority_id, Priority.all, :id, :name, {}, { class: "form-control" }) %>
    </div>

    <div class="form-group">
      <%= f.label :status_id, "状態", class: "form-label" %>
      <%= f.collection_select(:status_id, Status.all, :id, :name, {}, { class: "form-control" }) %>
    </div>

    <div class="form-group">
      <%= f.label :content, "内容", class: "form-label" %>
      <%= f.text_area :content, class: "form-control", placeholder: "タスク内容を入力してください", rows: 5 %>
    </div>

    <div class="actions mt-4">
      <%= f.submit "変更する", class: "btn btn-primary w-100" %>
    </div>
    <div class="actions mt-4 text-center">
      <%=link_to '戻る', task_path(@task), class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
